
<div class="detalle_partido">
    <div>
        <h1>@ViewBag.Partido.Nombre</h1>
    </div>
    <div>
        <p>Sitio Web: </p> <a href="@ViewBag.Partido.SitioWeb">@ViewBag.Partido.SitioWeb</a>
        <p>Fecha de Fundacion: @ViewBag.Partido.FechaFundacion</p>
        <p>Cantidad de Diputados: @ViewBag.Partido.CantidadDiputados</p>
        <p>Cantidad de Senadores: @ViewBag.Partido.CantidadSenadores</p>
    </div>
    
   <div class="patata">
    @for(int i = 0; i<ViewBag.Partido.CantidadDiputados; i++){

            <div class="card">
            <img src='~/img/candidatos/diputados/@(ViewBag.ListaCandidatos[i].Foto + ".png")' alt="Perfil" style="width:100%">
            <div class="FotoCandidato">
            <h2>@ViewBag.ListaCandidatos[i].Nombre @ViewBag.ListaCandidatos[i].Apellido</h2>
            <p>Diputado</p>
            <a href='@Url.Action("VerDetalleCandidato", new{idCandidato=ViewBag.ListaCandidatos[i].IdCandidato})'>Ver Datos</a>
            </div>
            </div>
            }

            @for(int i = 2; i<ViewBag.Partido.CantidadSenadores + ViewBag.Partido.CantidadDiputados ; i++){
            <div class="card">
            <img src='~/img/candidatos/senadores/@(ViewBag.ListaCandidatos[i].Foto + ".png")' alt="Perfil" style="width:100%">
            <div class="FotoCandidato">
            <h2>@ViewBag.ListaCandidatos[i].Nombre @ViewBag.ListaCandidatos[i].Apellido</h2>
            <p>Senador</p>
            <a href='@Url.Action("VerDetalleCandidato", new{idCandidato=ViewBag.ListaCandidatos[i].IdCandidato})'>Ver Datos</a>
            </div>
            </div>
            }
            <div class = "index_partido">
                <a href='@Url.Action("AgregarCandidato", new{idPartido=ViewBag.Partido.IdPartido})'>AÃ±adir Candidato</a>
                </div>
</div>


</div>